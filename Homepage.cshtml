@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Computer Shop - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link rel="stylesheet" href="~/content/home.css"> <!-- External CSS file -->
</head>
<body>

    <!-- Home Section -->
    <section class="home">
        <div class="content">
            <h2>Check Our Products </h2>
            <p>We have a wide varities of products for you.</p>
            <a href="@Url.Action("Products", "Home")" class="btn-prebuilt">Shop All Products</a>
        </div>
        <div class="img">
            <img src="@Url.Content("~/Models/images/HomeImages/homeImage.jpg")" alt="Prebuilt PCs">
        </div>
    </section>

    <!-- Best Sellers Section -->
    <section class="best-sellers">
        <h2>Best Selling Products</h2>
        @foreach (var product in ViewBag.PopularProducts)
        {
            <div class="best-seller-item">
                <a href="@Url.Action("Individual_product", "Home", new { id = product.ID})">
                    <img src="@Url.Action("GetImage", "Home", new { filename = System.IO.Path.GetFileName(product.ImagePath) })" alt="Product Image">
                    <h3>@product.Name</h3>
                    <p>@product.Price.ToString("C")</p>
                </a>
            </div>
        }
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>




