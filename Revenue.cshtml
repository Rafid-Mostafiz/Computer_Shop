@{
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Revenue Report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/revenue.css">
</head>
<body>
    <div class="container mt-4">
        <h3 class="mb-4">Revenue Report</h3>

        <div class="alert alert-info">
            Total Revenue from Checkout: $@ViewBag.TotalRevenue
        </div>

        <div class="revenue-card">
            <h5 class="revenue-title">Sales Data</h5>
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Item Name</th>
                        <th scope="col">Quantity Sold</th>
                        <th scope="col">Unit Price</th>
                        <th scope="col">Total Revenue</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Add your sales data here -->
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <td colspan="3" class="text-end"><strong>Total Revenue</strong></td>
                        <td><strong>$@ViewBag.TotalRevenue</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="mb-4">
            <button class="btn btn-primary">Download Report</button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>