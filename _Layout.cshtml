    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <style>
        body {
            background-color: #f0f0f0;
            color: #333;
            font-family: Arial, sans-serif;
        }

        .navbar {
            display: flex;
            align-items: center;
            gap: 10px;
            background-color: #4caf50; /* Green shade */
        }

        .navbar-nav ul {
            list-style: none;
            padding: 0;
            display: flex;
            margin-right: auto;
        }

        .navbar-nav li {
            margin-right: 20px;
        }

        .navbar-nav a {
            text-decoration: none;
            color: #fff;
            font-weight: bold;
            transition: color 0.3s;
        }

            .navbar-nav a:hover {
                color: #ffd700;
            }

        .logo {
            display: flex;
            align-items: center;
        }

            .logo h3 {
                margin-right: 10px;
                font-weight: bold;
                color: white; /* White text */
            }

        .search-bar {
            display: flex;
            margin-left: auto;
        }

            .search-bar input {
                background-color: #f8f9fa;
                padding: 10px;
                width: 200px;
                border: none;
                border-radius: 5px 0 0 5px;
                outline: none;
            }

            .search-bar button {
                padding: 10px;
                background-color: #388e3c; /* Green button */
                color: #fff;
                border: none;
                border-radius: 0 5px 5px 0;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .search-bar button:hover {
                    background-color: #2e7d32; /* Darker green on hover */
                }

        .sidebar {
            background-color: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
        }

        .offcanvas-header {
            background-color: #4caf50; /* Green shade */
        }

        .offcanvas-title {
            color: white;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container-fluid">
                <div class="logo">
                    <h3>Computer Shop</h3>
                    <img src="@Url.Content("~/Models/images/logo.png")" alt="" style="width: 50px; height: 50px;">
                </div>
                <button class="navbar-toggler shadow-none border-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="sidebar offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Computer Shop</h5>
                        <button type="button" class="btn-close btn-close-white shadow-none" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item mx-1">
                                @Html.ActionLink("Home", "Homepage", "Home", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item mx-1">
                                @Html.ActionLink("Products", "Products", "Home", new { area = "" }, new { @class = "nav-link" })
                            </li>

                            <li class="nav-item mx-1">
                                @Html.ActionLink("Prebuilt Section", "Prebuilt", "Home", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item mx-2">
                                @Html.ActionLink("Contact Us", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item mx-2">
                                @Html.ActionLink("Cart", "Cart", "Home", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item mx-2">
                                @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        </ul>
                        @*<div class="d-flex flex-row justify-content-center align-items-center">

            @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "text-white text-decoration-none px-3 py-1 rounded-4" })
        </div>*@
                        @* <form action="search.php" method="get" class="search-bar">
            <input type="text" name="query" placeholder="Search">
            <button type="submit" id="search-btn">Search</button>
        </form>*@

                        <li class="nav-link scrollto search-bar">
                            <form action="@Url.Action("Search", "Home")" method="GET">
                                <input type="text" name="query" placeholder="Search" required>
                                <button type="submit" class="search-btn">Search</button>
                            </form>
                        </li>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container body-content">
        @RenderBody()
        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
