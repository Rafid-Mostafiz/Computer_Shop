<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tech Shop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <style>
        body {
            background-color: #f0f0f0;
            color: #333;
            font-family: Arial, sans-serif;
        }

        .navbar {
            display: flex;
            align-items: center;
            gap: 10px;
            background-color: #4caf50; 
        }

        .navbar-nav ul {
            list-style: none;
            padding: 0;
            display: flex;
            margin-right: auto;
        }

        .navbar-nav li {
            margin-right: 20px;
        }

        .navbar-nav a {
            text-decoration: none;
            color: #fff;
            font-weight: bold;
            transition: color 0.3s;
        }

            .navbar-nav a:hover {
                color: #ffd700;
            }

        .logo {
            display: flex;
            align-items: center;
        }

            .logo h3 {
                margin-right: 10px;
                font-weight: bold;
                color: white; /* White text */
            }

        .search-bar {
            display: flex;
            margin-left: auto;
        }

            .search-bar input {
                background-color: #f8f9fa;
                padding: 10px;
                width: 200px;
                border: none;
                border-radius: 5px 0 0 5px;
                outline: none;
            }

            .search-bar button {
                padding: 10px;
                background-color: #388e3c; 
                color: #fff;
                border: none;
                border-radius: 0 5px 5px 0;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .search-bar button:hover {
                    background-color: #2e7d32; 
                }

        .sidebar {
            background-color: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
        }

        .offcanvas-header {
            background-color: #4caf50; 
        }

        .offcanvas-title {
            color: white;
        }

        .footer {
            background-color: #4caf50; 
            text-align: center;
            padding: 15px;
            color: white;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container-fluid">
                <div class="logo">
                    <h3>Computer Shop</h3>
                    <img src="@Url.Content("~/Models/images/logo.png")" alt="" style="width: 50px; height: 50px;">
                </div>
                <button class="navbar-toggler shadow-none border-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="sidebar offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Computer Shop</h5>
                        <button type="button" class="btn-close btn-close-white shadow-none" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            @if (Session["user"] != null)
                            {
                               
                                <li class="nav-item mx-1">
                                    @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item mx-1">
                                    @Html.ActionLink("Feedback", "Feedback", "Home", new { area = "" }, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item mx-1">
                                    @Html.ActionLink("Dashboard", "AdminDashboard", "Home", new { area = "" }, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item mx-1">
                                    @Html.ActionLink("Revenue", "Revenue", "Home", new { area = "" }, new { @class = "nav-link" })
                                </li>
                            }
                            else
                            {
                               
                                <li class="nav-item mx-1">
                                    @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item mx-1">
                                    @Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { @class = "nav-link" })
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container body-content" style="padding-bottom: 100px;">
       
        @RenderBody()

    </div>

    <!-- Footer Section -->
    <footer class="footer">
        &copy; Copyright <strong>Tech Shop</strong>. All Rights Reserved
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>