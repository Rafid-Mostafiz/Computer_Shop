@model IEnumerable<Tech_Shop.Models.contact>
@{
    Layout = "~/Views/Shared/Layout2.cshtml";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feedback Messages</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link rel="stylesheet" href="~/Content/feedback.css">
</head>
<body>
    <div class="container" style="padding-top: 100px;">
        <h3 class="mb-4" style="color: #4CAF50; font-weight: bold;">Messages sent by the user</h3>

        <!-- Display feedback messages -->
        <div class="row">
            @foreach (var contact in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="feedback-card p-3 border rounded">
                        <div class="feedback-card-content">
                            <h5 class="feedback-title">@contact.subject</h5>
                            <p><strong>Name:</strong> @contact.name</p>
                            <p><strong>Email:</strong> @contact.email</p>
                            <p class="feedback-message"><strong>Message:</strong> @contact.message</p>
                            <p><small><strong>Created At:</strong> @contact.created_at.ToString("yyyy-MM-dd HH:mm:ss")</small></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>